@model IndexLogViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Logs" asp-action="Index" method="get">
    Type: 
    <select asp-for="Type" asp-items="Model.Types">
        <option value="">All</option>
    </select>
    <p>
        Reference: <input type="text" name="Reference">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logs[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logs[0].LoggedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logs[0].LogLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logs[0].Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logs[0].Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logs[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Logs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoggedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
