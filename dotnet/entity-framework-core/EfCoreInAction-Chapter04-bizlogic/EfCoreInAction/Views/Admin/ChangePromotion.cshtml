@model DataLayer.EfClasses.PriceOffer



<h2>Add/change Book Promotion</h2>

<div class="form-horizontal">
    <form asp-controller="Admin" asp-action="ChangePromotion" method="post">
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId" />
        
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @ViewData["BookTitle"]
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Org Price</label>
            </div>
            <div class="col-sm-10">
                @ViewData["OrgPrice"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">New Price</label>
            </div>
            <input asp-for="NewPrice" class="form-control col-sm-10" />
        </div>
        
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional Text</label>
            </div>
            <input asp-for="PromotionalText" class="form-control col-sm-10" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Update</button>
            </div>
        </div>

    </form>
</div>